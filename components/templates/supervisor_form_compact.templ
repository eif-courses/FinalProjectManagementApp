									}
									if !props.IsReadOnly {
										<span class="text-red-500 ml-1">*</span>
									}
								}
								@input.Input(input.Props{
									ID:       "supervisor_position",
									Type:     input.TypeText,
									Name:     "supervisor_position",
									Value:    formData.SupervisorPosition,
									Required: !props.IsReadOnly,
